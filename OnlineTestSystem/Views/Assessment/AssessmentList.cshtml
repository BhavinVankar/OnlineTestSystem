@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    ViewData["Title"] = "Assessment List Page";
    ViewData["navId"] = "AssessmentList";
}
@model AssessmentModel
<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12 m-l-10">
        <h4 class="page-title"> Assessment</h4>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Dashboard","Assessment")">Dashboard</a>
            </li>
            <li class="active">
                Manage Assessment
            </li>
        </ol>
    </div>
</div>
<!---------------------- AssessmentData Listing Page ---------------->
<div class="row">
    <div class="col-lg-12 ">
        <div class="portlet">
            <!-- /primary heading -->
            <div class="portlet-heading">
                <button class="btn btn-default btn-md waves-effect waves-light m-b-20 float-right" onclick="btnAddAssessmentClick()">
                    <i class="fa fa-Assessment-plus m-r-5"></i> Add Assessment
                </button>
                <div class="table-responsive">
                    <div id="AssessmentPartialData">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- end col -->

<!------------------------------------------- View Assessment Modal ----------------------------------------->
<div id="ViewAssessmentModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;" aria-modal="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">View Assessment</h4>
            </div>
            <div class="modal-body" id="modelViewAssessmentBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger waves-effect" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!----------------------------------------- Edit Assessment Modal --------------------------------------------------->
<div id="EditAssessmentModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Assessment</h4>
            </div>
            <div class="modal-body" id="modelEditAssessmentBody">
            </div>
            <div class="modal-footer">
                <button type="button" id="editclose" class="btn btn-danger waves-effect" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-info waves-effect waves-light" onclick="UpdateAssessmentData()">Save changes</button>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Assessment/Assessment.js"></script>
