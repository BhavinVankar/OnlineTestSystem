@using OnlineTestSystem.Models.ResponseModel;
@using OnlineTestSystem.Models.Common;
@model List<AssessmentHistoryModel>

@if (Model != null)
{
    <table class="table table-striped table-bordered" id="datatable">
        <thead class="AssessmentTable tableHeader">
            <tr>
                <th class="text-center">Completed Date</th>
                <th class="text-center">Assessment Name</th>
                <th class="text-center">Description</th>
                <th class="text-center">Score</th>
                <th class="text-center">Status</th>
                <th class="text-center">Name</th>
                <th class="text-center">Email Address</th>
            </tr>
        </thead>
        <tbody style="text-align:center;">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CompletedDate.ToString("dd MMM yyyy")</td>
                    <td>@item.TestName</td>
                    <td>@item.Description</td>
                    <td>@item.Score</td>
                    @if(item.Status == AppConstants.Pass)
                    {
                        <td>Pass</td>
                    }
                    else
                    {
                        <td>Fail</td>
                    }
                    <td>@item.Name</td>
                    <td>@item.EmailAddress</td>
                </tr>
            }
        </tbody>
    </table>
}